# X (Twitter) API v2 - Requires Elevated access for user timeline
# Get keys at https://developer.twitter.com/en/portal/dashboard
X_API_KEY=your_api_key
X_API_SECRET=your_api_secret
X_ACCESS_TOKEN=your_access_token
X_ACCESS_TOKEN_SECRET=your_access_token_secret
X_BEARER_TOKEN=your_bearer_token

# AI: openai | anthropic | ollama (local, no key)
AI_PROVIDER=ollama
ANTHROPIC_API_KEY=your_anthropic_api_key
OPENAI_API_KEY=your_openai_api_key
# Ollama (local): install from https://ollama.com, run "ollama serve" and "ollama pull llama3.2"
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3.2

# Target X handle to analyze and post as (without @). Used when --handle is not passed and for single-account fallback.
X_HANDLE=mcisaul_

# Learn from many, post as one: comma-separated usernames to fetch and analyze (Bearer token only; no keys for these).
# Leave empty for single-account mode. Example: SOURCE_HANDLES=user1,user2,user3,...,user10
# SOURCE_HANDLES=user1,user2,user3

# Multi-account: copy accounts.json.example to accounts.json and add per-handle access_token + access_token_secret.
# Same app (X_API_KEY/X_API_SECRET) can have multiple users; each user needs their own token in accounts.json.
# If handle is not in accounts.json, X_ACCESS_TOKEN and X_ACCESS_TOKEN_SECRET are used (default account).

# Optional: delay range (min, max) in seconds between automated actions (human-like)
MIN_DELAY_SEC=30
MAX_DELAY_SEC=120

# Autonomous posting safeguards (no input required, but careful)
MAX_POSTS_PER_DAY=5
ENABLE_SAFETY_CHECK=true
# Blocklist: comma-separated words/phrases that will block a tweet if present (case-insensitive)
# BLOCKLIST=spam,badword

# Media: attach relevant image and/or video to tweets
ENABLE_IMAGE=false
# IMAGE_SOURCE=ai (DALLÂ·E) | folder | twitter (search X and reuse public media)
IMAGE_SOURCE=twitter
# IMAGE_FOLDER_PATH=/path/to/images  (when IMAGE_SOURCE=folder)
ENABLE_VIDEO=false
# VIDEO_SOURCE=folder | twitter (search X and reuse public media)
VIDEO_SOURCE=twitter
# VIDEO_FOLDER_PATH=/path/to/videos   (when VIDEO_SOURCE=folder)
# OPENAI_IMAGE_MODEL=dall-e-3         (when IMAGE_SOURCE=ai)
